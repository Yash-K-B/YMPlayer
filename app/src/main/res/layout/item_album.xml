<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#D7D7D8"
    android:elevation="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_art"
        android:layout_toStartOf="@+id/album_more"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="Album name nnnnnnnnnnn"
        android:textColor="#2E2D2D"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/album_subText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_name"
        android:layout_toStartOf="@+id/album_more"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="2 - songs"
        android:textColor="#6A6A6A"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/album_more"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/album_art"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_below="@+id/album_subText"
        android:layout_height="5dp"
        android:background="@android:color/transparent" />

</RelativeLayout>