<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#00168E</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:navigationBarColor">#0A0069</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="YTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="listTitleTextColor">#000000</item>
        <item name="layoutBackground">@android:color/background_light</item>
        <item name="overlayTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="backgroundHeadingTextColor">?attr/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="YTheme.Dark" parent="Theme.AppCompat">
        <item name="listTitleTextColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="layoutBackground">#272727</item>
        <item name="overlayTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="backgroundHeadingTextColor">#FFD600</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">#272727</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="YTheme.AMOLED" parent="Theme.AppCompat">
        <item name="listTitleTextColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/black_background</item>
        <item name="layoutBackground">@android:color/black</item>
        <item name="overlayTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="backgroundHeadingTextColor">#FFD600</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>